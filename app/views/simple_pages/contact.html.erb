<div class="jumbotron">
  <%= video_tag "city-biking.mp4", controls: false, autoplay: true, muted: true, loop: true, class: "video" %>
  <div class="container contact">
    <div class="row">
      <div class="col-sm-12">
        <form>
          <h1 class="h1-form">Contact Us</h1>
          <%= flash[:notice] %>
          <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
          </div><!-- /.form-group-->
          <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
          </div><!-- /.form-group-->
          <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
          </div><!-- /.form-group-->
          <div class="send btn">
            <%= form.submit "Send", class: "form-label" %>
          </div>
          <% end %>
        </form>
      </div><!-- /.col-sm-12-->
    </div><!-- /.row -->
  </div><!-- /.container -->
</div><!-- /.jumbotron -->
