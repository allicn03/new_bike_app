<div class="jumbotron">
  <%= video_tag "autumn-bike.mp4", controls: false, autoplay: true, muted: true, loop: true, class: "video" %>
  <div class="container login">
    <div class="row">
      <div class="col-sm-12">
        <form>
          <h1 class="h1-form" id="h1-login">Log in</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group"><!-- .field -->
                <%= f.label :email, class: "login-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div><!-- field -->


            <div class="form-group"><!-- .field -->
              <%= f.label :password, class: "login-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div><!-- .field -->


            <% if devise_mapping.rememberable? -%>
              <div class="form-group"><!-- .field -->
                <%= f.check_box :remember_me, class: "form-control checkbox" %>
                <%= f.label :remember_me, class: "remember-me login-label"%>
              </div><!-- .field -->
            <% end -%>


            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </form>
      </div><!-- /.col-sm-12 -->
    </div><!-- /.row -->
  </div><!-- .jumbtron-text-->
</div><!-- .jumbotron -->
