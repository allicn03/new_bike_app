<div class="jumbotron">
  <%= video_tag "autumn-bike.mp4", controls: false, autoplay: true, muted: true, loop: true, class: "video" %>
  <div class="container login">
    <div class="row">
      <form>
        <h1 class="h1-form" id="h1-login">Log in</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group"><!-- .field -->
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div><!-- field -->


          <div class="form-group"><!-- .field -->
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div><!-- .field -->


          <% if devise_mapping.rememberable? -%>
            <div class="form-group"><!-- .field -->
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div><!-- .field -->
          <% end -%>


          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </form>
    </div><!-- /.row -->
  </div><!-- .jumbtron-text-->
</div><!-- .jumbotron -->
