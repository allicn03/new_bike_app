<% cache product do %>
  <div class="col-sm-2 col-md-4 product-description" style="margin-bottom: 25px">
    <%= image_tag(product.image_url, class: "img-fluid") %>
    <a href="#"><h1><%= product.name %></h1></a>
    <p><%= product.description %></p>
    <p><%= product.colour %></p>
    <strong>$<%= product.price %></strong>
  </div><!-- /col-sm -->
<% end %>
